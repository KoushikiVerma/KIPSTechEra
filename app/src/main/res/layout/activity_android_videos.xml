<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearlayout"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:id="@+id/btnAV1"
            android:backgroundTint="@color/white"
            android:src="@drawable/videoandy1"
            android:scaleType="fitXY"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/btnAV2"
            android:backgroundTint="@color/white"
            android:layout_marginTop="30dp"
            android:src="@drawable/videoandy2"
            android:scaleType="fitXY"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/btnAV3"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/videoandy3"
            android:scaleType="fitXY"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/btnAV4"
            android:backgroundTint="@color/white"
            android:layout_marginTop="30dp"
            android:src="@drawable/videoandy4"
            android:scaleType="fitXY"/>
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/btnAV5"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/videoandy5"
            android:scaleType="fitXY"/>
    </LinearLayout>

</ScrollView>