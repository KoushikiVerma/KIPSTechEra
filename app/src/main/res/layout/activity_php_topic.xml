<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/activity_toolbar"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewST"
        android:src="@drawable/topicselection"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_php1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#79BD7C"
            android:padding="20dp"
            android:text="PHP Overview"
            tools:ignore="HardcodedText,UnusedAttribute,TextContrastCheck" />

        <Button
            android:id="@+id/btn_php2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#79BD7C"
            android:padding="20dp"
            android:text="PHP Installation and Configuration"
            tools:ignore="HardcodedText,UnusedAttribute,TextContrastCheck" />

        <Button
            android:id="@+id/btn_php3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#79BD7C"
            android:padding="20dp"
            android:text="PHP Basics"
            tools:ignore="HardcodedText,TextContrastCheck,UnusedAttribute" />

        <Button
            android:id="@+id/btn_php4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#79BD7C"
            android:padding="20dp"
            android:text="PHP with Database"
            tools:ignore="HardcodedText,UnusedAttribute,TextContrastCheck" />

        <Button
            android:id="@+id/btn_php5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#79BD7C"
            android:padding="20dp"
            android:text="PHP OOPs"
            tools:ignore="HardcodedText,TextContrastCheck,UnusedAttribute" />

    </LinearLayout>
</RelativeLayout>